<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapHorLinear"
    android:orientation="horizontal"
    android:layout_weight="4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/healthy"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/gender"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/man_icon"
            app:srcCompat="@drawable/ic_launcher_foreground" />

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrapVerLinear"
        android:id="@+id/linear_layout"
        android:layout_weight="3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/name"
                style="@style/TextViewUrl"
                android:layout_width="595dp"
                android:layout_weight="3"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                style="@style/TextViewUrl"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/diseases"
            style="@style/TextViewDate" />

    </LinearLayout>
</LinearLayout>