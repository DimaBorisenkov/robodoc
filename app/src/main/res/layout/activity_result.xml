<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".domain.ResultActivity">

    <TextView
        android:id="@+id/textViewNAME_OF_PATIENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Dima Borisenkov Olexiovich"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewLIST_OF_DISEASES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNAME_OF_PATIENT"
        android:text="Diseases : "
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewDISEASES_VISUALIZATION"
        android:layout_width="325dp"
        android:layout_height="319dp"
        android:layout_centerInParent="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textViewDATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:text="30 06 2004"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDELETE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="DELETE"
        android:visibility="visible" />
</RelativeLayout>