<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".domain.result.ResultActivity">

    <TextView
        android:id="@+id/textViewPatientDiseases"
        android:layout_width="203dp"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewPatientName"
        android:layout_marginTop="126dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewPatientName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewPatientState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewPatientDiseases"
        android:layout_marginTop="97dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageViewPatientSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/woman_icon" />
</RelativeLayout>