<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".domain.result.ResultActivity">


    <RelativeLayout
        android:background="@drawable/round_shape_layout"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPatientName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="12dp"
                    android:text="TextView"
                    android:textAllCaps="true"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textViewPatientDate"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textViewPatientState"
                    android:layout_marginStart="13dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textViewPatientState"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textViewPatientName"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="13dp"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPatientDiseases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="13dp"

                    android:text="TextView" />

                <TextView
                    android:id="@+id/textViewPatientBlood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="TextView" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="585dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/background_light" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/delete"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_above="@+id/buttonDelete"
        android:layout_alignStart="@+id/buttonDelete"
        android:text="@string/edit"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonTransmit"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_above="@+id/buttonEdit"
        android:layout_alignStart="@+id/buttonMedicines"
        android:text="@string/transmit"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonMedicines"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonDelete"
        android:layout_marginBottom="102dp"
        android:text="@string/medicines"
        android:visibility="invisible" />

</RelativeLayout>