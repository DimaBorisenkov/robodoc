<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/selectGender"
        android:layout_marginTop="63dp"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="122dp"
            android:layout_height="61dp"
            android:button="@drawable/man_icon"
            android:text="@string/male"
            android:textAlignment="center"
            android:textSize="35px"/>

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/woman_icon"
            android:text="@string/female"
            android:textAlignment="center"
            android:textSize="35px"/>

    </RadioGroup>

    <TextView
        android:id="@+id/selectGender"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="19dp"
        android:text="@string/selectGender"
        android:textSize="50px" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="162dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/radioSex"
        android:layout_marginEnd="33dp"
        app:srcCompat="@color/ic_launcher_background" />


    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioSex"
        android:layout_centerVertical="true"
        android:text="CONFIRM" />

</RelativeLayout>
