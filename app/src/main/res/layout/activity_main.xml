<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".domain.MainActivity">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="470dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_shape_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/blood" />

        <Button
            android:id="@+id/buttonBloodTestActivity"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_shape_btn"
            android:text="@string/bloodTest"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonTrainerActivity"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_shape_btn"
            android:text="@string/trainer"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSimpleTestActivity"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/round_shape_btn"
            android:text="@string/simpleTest"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>